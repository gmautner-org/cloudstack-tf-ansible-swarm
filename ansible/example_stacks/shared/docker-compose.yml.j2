version: '3.8'

services:
  echoserver:
    image: cilium/echoserver:latest
    networks:
      - traefik_network
    deploy:
      replicas: 3
      placement:
        constraints:
          - node.labels.pool == shared
      resources:
        limits:
          cpus: '0.50'
          memory: 512M
        reservations:
          cpus: '0.25'
          memory: 256M
      labels:
        - traefik.enable=true
        - traefik.http.routers.echoserver.rule=Host(`echo.{{ domain_suffix }}`)
        - traefik.http.routers.echoserver.entrypoints=websecure
        - traefik.http.routers.echoserver.tls.certresolver=letsencrypt
        - traefik.http.services.echoserver.loadbalancer.server.port=80

networks:
  traefik_network:
    external: true
