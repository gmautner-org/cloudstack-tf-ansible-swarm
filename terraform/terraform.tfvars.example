# SSH public key for instance access
ssh_public_key = "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAABgQC... your-public-key-here"

# Cluster name
cluster_name = "cluster-1"



# Opcional: Restringir acesso SSH (default: ["0.0.0.0/0"])
